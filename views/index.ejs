<!--Index EJS file. This page is the landing page for the whole website.-->
<!--Features include a navbar, hero section, user reviews section and services menu section-->
<!--Authenticated users will have more features within the Navbar, services section and a personalised welcome message-->
<!--Unauthenticated users will have limited features within the services and navabar. They will be directed to register or login.-->

<!--Include for both header and navbar-->
<%- include('header', {bodyClass: ''}) %> <%- include('navbar') %>

<!-- HERO -->
<!--Hero container. Height is 100% viewport and aligns all items in the vertically centre using d-flex and aligns all the classes  centrally-->
<div class="hero vh-100 d-flex align-items-center" id="home">
  <div class="container">
    <div class="row">
      <!--col-lg-7 creates columns within row that is 7/12 available columns on large device-->
      <!--mx-auto centres the column on the horizontal plane-->
      <!--text -centre ensurs that all text is centresed-->
      <div class="col-lg-7 mx-auto text-center">
        <!--Check if the user is authenticated-->
        <% if (isAuthenticated) { %>
        <!--Personalised message using the user's first name-->
        <h1 class="display-4 text-white">
          Good Morning, <%= userdata.first_name %>
        </h1>
        <% } else { %>
        <!--Default message if the user is not authenticated-->
        <h1 class="display-4 text-white">Good Day</h1>
        <% } %>
        <!--my-3 adds margin to intro message-->
        <p class="text-white my-3">
          The best place to listen and view your favourite Vinyls
        </p>
        <!--Link to discover page-->
        <a class="btn me-2 btn-primary" href="/discover">Discover</a>
        <!--check if the user is not authenticated-->
        <% if (!isAuthenticated) { %>
        <!--If not, provide button and route to register-->
        <a class="btn btn-outline-light" href="/register">Sign Up</a>
        <% } else { %>
        <!--If they are autheticated provide button and route to my account page-->
        <a class="btn btn-outline-light" href="/account">My Account</a>
        <% } %>
      </div>
    </div>
  </div>
</div>
<!--HERO End -->

<!--USER Reviews Section-->
<!--container class for user reviews wuth vertical margin to add spacing-->
<div class="container my-5">
  <div class="row">
    <!--col-md-8 class creates column within row that takes up 8 /12 columns-->
    <!--mx-auto class centres the columns horizontally-->
    <div class="col-md-8 mx-auto">
      <!--Heading with text aligned centrally and margin added to the bottom-->
      <h1 class="text-center mb-4">User Reviews</h1>

