  </div>
</div>
<!--USER Reviews End-->

<!-- SERVICES Section -->
  <div class="container">
    <!--click onto discover if you select any of the panel-->
    <div class="row text-center">
      <!--Menu message-->
      <div class="col">
        <h1 class="text-primary1">Menu</h1>
        <p>Select what you need</p>
      </div>
    </div>

    <!--Container for services-->
      <div class="container">
        <!--Create horizontal group of columns for service cards-->
        <div class="row g-4 my-4">
          <!--Check if they are authenticated-->
          <% if (isAuthenticated) { %> 
            <!--If so then show the logged in services template-->
            <%- include('loggedin-services') %> 
          <% } else { %> 
            <!--If not authenticated then show guest services-->
            <%- include('guest-services') %> <% } %>
        </div>
      </div>
    <!-- SERVICES -->
  </div>

 <!--Bottom bar-->
 <%- include('bottombar') %>
