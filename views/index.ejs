<%- include('header') %>
<%- include('navbar') %>


 <!-- HERO -->
<div class="hero vh-100 d-flex align-items-center" id="home">
  <div class="container">
    <div class="row">
      <div class="col-lg-7 mx-auto text-center">
        <% if (isAuthenticated) { %>
          <h1 class="display-4 text-white">Good Morning, <%= userdata.first_name %></h1>
        <% } else { %>
          <h1 class="display-4 text-white">Good Day</h1>
        <% } %>
        <p class="text-white my-3">The best place to listen and view your favourite Vinyls</p>
        <a class="btn me-2 btn-primary" href="/discover">Discover</a>
        <% if (!isAuthenticated) { %>
          <a class="btn btn-outline-light" href="/signup">Sign Up</a>
        <% } else { %>
          <a class="btn btn-outline-light" href="/account">My Account</a>
        <% } %>
      </div>
    </div>
  </div>
</div><!-- //HERO -->

<!--user review file-->
