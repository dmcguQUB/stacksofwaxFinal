<%- include('header') %>
<%- include('navbar') %>

<div class="container">
  <div class="row mt-4">
    <div class="col-lg-6 mx-auto">
      <div class="card card-effect">
        <div class="card-body">
          <h4 class="card-title mb-4 text-center">Account Summary</h4>
          <div class="row">
            <div class="col-6">
              <p class="fw-bold text-center">First Name:</p>
            </div>
            <div class="col-6">
              <p class="text-center"><%= userDetails.first_name %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <p class="fw-bold text-center">Last Name:</p>
            </div>
            <div class="col-6">
              <p class="text-center"><%= userDetails.last_name %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <p class="fw-bold text-center">Email:</p>
            </div>
            <div class="col-6">
              <p class="text-center"><%= userDetails.email %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <p class="fw-bold text-center">Number of Liked Songs:</p>
            </div>
            <div class="col-6">
              <p class="text-center"><%= userDetails.number_of_songs %></p>
            </div>
          </div>          
        </div> <!--here-->
      </div>
    </div>
  </div>
</div>


