<!--enable bootstrap is available on all pages with navbar-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!--NavBAR-->
<!--changing colour of the logo and adjusted the size of works-->

<nav class="navbar navbar-expand-lg py-3 sticky-top navbar-light bg-white">
  <div class="container">
    <a class="navbar-brand" href="/">Stacks<i class="fa-solid fa-record-vinyl"></i>fWax</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/discover">Discover</a>
        </li>

        <% if (isAuthenticated) { %>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Your Library
          </a>
          <ul class="dropdown-menu">
            <!--need to change this to match which songs they have liked-->
            <li><a class="dropdown-item" href="/discover">Liked Songs</a></li>
            <li><a class="dropdown-item" href="#">Playlists</a></li>
            <li><a class="dropdown-item" href="#">Artists</a></li>
            <li><a class="dropdown-item" href="#">Albums</a></li>
            <li><hr class="dropdown-divider" /></li>
            <!-- add refernece to account page -->
            <li>
              <a class="dropdown-item" href="/account">Your Account</a>
            </li>
          </ul>
        </li>
        <% } %>

        <li class="nav-item">
          <a class="nav-link" href="/pricing">Pricing</a>
        </li>
      </ul>
      <form class="d-flex" action="/search" method="get">
        <input
          class="form-control me-2"
          type="search"
          name="q"
          placeholder="Search"
          aria-label="Search"
          onkeydown="if (event.keyCode == 13) { this.form.submit(); return false; }"
        />
      </form>
      <ul class="navbar-nav">
        <% if (!isAuthenticated) { %> <!-- Only show the login and register buttons if the user is not authenticated -->
          <li class="nav-item">
            <a class="btn btn-outline-primary nav-link" href="/login">Signin</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-primary nav-link ms-lg-2" href="/register">Join Us</a>
          </li>
        <% } else { %> <!-- Show the logout button when the user is authenticated -->
          <li class="nav-item">
            <a class="btn btn-primary nav-link ms-lg-2" href="/logout">Logout</a>
          </li>
        <% } %>
      </ul>
      
    </div>
  </div>
</nav>
