<!--register.ejs file. Users enter details including first name, last name, email and password. A number of validations to check the information is correct.-->
<!--header.ejs partial with bodyClass parameter passed in so register page implements bootstrap login page format-->
<!--Both Header and Navbar template derivatives in the EJS template for this page. These are rendered in conjunction with current ejs template. -->
<%- include('header', {bodyClass: 'login-bg'}) %> <%- include('navbar') %>

<!--Register container. Same format as login fomr-->
<div class="form-container container-fluid login-register-form">
  <!--register header-->
  <h1 class="login-title">Register Form</h1>
  <!-- Error message - if there is an error message variable defined an alert will be displayed in a bootstrap alert component-->
  <% if (errorMessage) { %>
  <div class="alert alert-danger" role="alert"><%= errorMessage %></div>
  <% } %>
  <!--create the horizontal rows for bootstrap grid system-->
  <div class="row">
    <!--Determine grid size depending on screen size, medium, small and extra small respectively-->
    <div class="col-md-4 col-sm-4 col-xs-12"></div>
    <!--div that holds the actual login form-->
    <div class="col-md-4 col-sm-4 col-xs-12">
      <!--form element which will execute a POST action using route /register to send user info to the server-->
      <form action="/register" method="POST">
        <!--FirstName form. Works similiar to login however value="<%= firstName %>" sets the value of the input field to the value of the firstName variable. It also allows checks if the user has entered a null value so we can check and validate so that no null data is stored in the database-->
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input
            type="text"
            class="form-control"
            id="inputFirstName"
            placeholder="Enter first name"
            name="firstName"
            value="<%= firstName || '' %>"
          />
        </div>
        <!--FirstName form - end-->

        <!--Last Name form with validation checks-->
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="inputLastName"
            placeholder="Enter last name"
            name="lastName"
            value="<%= lastName || '' %>"
          />
        </div>
        <!--Last Name form - end-->

        <!--Email form-->
        <div class="form-group">
          <label for="inputEmail">Email</label>
          <input
            type="email"
            class="form-control"
            id="inputEmail"
            placeholder="Enter email"
            name="email"
            value="<%= email || '' %>"
          />
        </div>
        <!--Email form -end -->

        <!--Password form-->

        <div class="form-group">
          <label for="inputPassword">Password</label>
          <input
            type="password"
            class="form-control"
            id="inputPassword"
            placeholder="Password"
            name="password"
          />
        </div>
        <!--Password -end -->

        <!--Confirmation Password -->
        <div class="form-group">
          <label for="inputPasswordConfirm">Confirm Password</label>
          <input
            type="password"
            class="form-control"
            id="inputPasswordConfirm"
            placeholder="Confirm Password"
            name="passwordConfirm"
          />
        </div>
        <!--Confirmation password -end -->

        <!--Register button -->
        <button
          type="submit"
          class="btn btn-outline-success btn-block login-register-button"
        >
          Register
        </button>
      </form>
      <!--Register button -end -->

      <!--Navigation buttons for Login or Browse-->
      <div class="mt-3 d-flex justify-content-around">
        <a href="/login" class="btn btn-primary">Login</a>
        <a href="/" class="btn btn-primary">Browse</a>
      </div>
      <!--Navigation buttons for Login or Browse- end-->
    </div>
  </div>
</div>
<!--Register container end-->

<!--Bottom bar-->
<%- include('bottombar') %>
